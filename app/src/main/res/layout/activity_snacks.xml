                android:layout_marginLeft="25dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="1dp">

                <RelativeLayout
                    android:layout_width="@dimen/cardwidth"
                    android:layout_height="wrap_content"
